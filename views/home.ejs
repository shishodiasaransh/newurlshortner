<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>URL Shortner </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-black">
    <div class="container"><h1 class="mt-4 text-center text-success"> <b><span class=" p-3 mb-5 mt-5 rounded  ">URL Shortner Service</span></b> </h1>
        <form class="mb-3" method="POST" action="/url">
            <label for="" class="form-label text-success"><b><h5>Input URL:</h5></b></label>
            <input type="url" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" name="url">
            <div class="text-center"><button type="submit" class="btn btn-success shadow-lg mt-5 mb-5">Generate</button></div>
        </form>
        <div class="text-center text-light border-success border-bottom">
            <h3> Generated URL :  
            <% if (locals.id) { %>
             http://localhost:8000/<%= id %>
            <% } %>
        </h3></div>
        <div class="text-center text-light mt-5">
            <h3> Previous URLs  </h3>
            <div class="table-responsive table-hover table-striped table-condensed tasks-table">
                <% if (locals.urls) { %>
                 <table class="border">
                    <thead>
                        <th class="border">Serial No.</th>
                        <th class="border">short Id</th>
                        <th class="border">redirect URL</th>
                        <th class="border">Total Clicks</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url,index) => { %>
                        <tr class="border">
                         <td class="border"><%= index+1  %></td>
                         <td class="border"><%= url.shortId  %></td>
                         <td class="border"><%= url.redirecturl  %></td>
                         <td class="border"><%= url.visithistory.length  %></td>
                        <% }) %>
                    </tr>
                    </tbody>
                 </table>
                <% } %>
            </div>
        </div>
         
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>